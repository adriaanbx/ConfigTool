<Window x:Class="ConfigTool.UI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ConfigTool.UI"
        xmlns:view="clr-namespace:ConfigTool.UI.View"
        mc:Ignorable="d"
        Title="ConfigTool" Height="Auto" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <view:NavigationView DataContext="{Binding NavigationViewModel}"/>
        <view:PlctagDetailView Grid.Row="1" DataContext="{Binding PlctagDetailViewModel}"/>
    </Grid>
</Window>
